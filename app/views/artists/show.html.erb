  <h1><%= @artist.name %> Songs</h1>
  <%#= link_to "New Song", songs_new_path(:artist_id => @artist.id), { :class => "button waves-effect waves-light btn" } %>

<%= form_for @new_song, :as => :song, :url => add_song_path(@new_song), :method => :post do |f| %>
    <%= f.hidden_field :artist_id, :value => @artist.id %>
  	<div class="input-field col s6">
    	<%= f.label :title, 'Title' %>
    	<%= f.text_field :title %>
    </div>
    <div class="input-field col s6">
    	<%= f.label :genre, 'Genre' %>
    	<%= f.text_field :genre %>
    </div>
    <%= f.submit "Add a New Song", :class => "btn waves-effect waves-light" %>
  <% end %>

  <div class="row">
    <% @songs.each do |song| %>

        <div class="card-panel grey lighten-2 col s12">
          <%= image_tag(@artist.img, size: "100x100", alt: "Artist Image") %>
          <br>
          <strong><%= link_to song.title %></strong>
          <em><%= song.genre %></em>
        </div>
    <% end %>
  </div>
